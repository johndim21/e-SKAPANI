<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_dashboard_background"
    tools:context=".ui.mosaic.mosaic_puzzle.MosaicPuzzleFragment">

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_screen_shadow" />

    <app.e_skapani.ui.mosaic.mosaic_puzzle.PuzzleView
        android:id="@+id/puzzle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@+id/play_and_reset_btn"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.9"
        app:pv_borderColor="@color/white"
        app:pv_borderSize="10" />


    <ImageView
        android:id="@+id/solution_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/empty"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/puzzle_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/puzzle_view"
        app:srcCompat="@drawable/mosaic"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/play_and_reset_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="@string/empty"
        app:layout_constraintBottom_toTopOf="@+id/timerView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:srcCompat="@drawable/ic_restart"
        android:contentDescription="@string/empty" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <app.e_skapani.ui.mosaic.mosaic_puzzle.TimerView
        android:id="@+id/timerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/middle_separator"
        app:layout_constraintWidth_percent="0.2" />

    <ImageButton
        android:id="@+id/see_solution_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/shape_see_complete_puzzle_image"
        android:text="@string/empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/middle_separator"
        app:layout_constraintWidth_percent="0.2"
        app:srcCompat="@drawable/ic_eye"
        android:contentDescription="@string/empty" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>